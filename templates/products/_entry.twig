{% extends 'partials/layouts/_master.twig' %}

{% block content %}


  <section class="container mx-auto py-8 sm:py-12 px-4 sm:px-0">

    {% set category = craft.categories() %}

    <span class="text-sm">Home / <a class="text-green" href="#"> {{ entry.title }}</a></span>

       <h1 class="text-3xl text-black my-4">{{ entry.title}}</h1>

       <div class="w-16 bg-green h-1"></div>

       <div class="flex mt-8">

         <div class="flex-none w-1/2 bg-gray-100 p-8 rounded-lg ">

           <p class="text-green text-xl mb-4">
             
             {{ entry.subtitle }}

           </p>

           {{ entry.description | markdown }}

         </div>

         <div class="flex-initial w-1/2 pl-20">


           <div class="slick w-full" data-slick='{"slidesToShow": 1, "slidesToScroll": 1}'>

             {% for image in entry.productImages.all() %}

              <div>

                <img class="w-full" src="{{ image.getUrl('productImage') }}"/>

              </div>

            {% endfor %}

          </div>

         </div>


       </div>

  </section>

{% endblock %}
